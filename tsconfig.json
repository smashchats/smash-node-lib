{
    "compilerOptions": {
        "target": "ESNext",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "outDir": "./dist",
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "forceConsistentCasingInFileNames": true,
        "composite": true,
        "rootDir": ".",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "strict": true,
        "baseUrl": ".",
        "paths": {
            "smash-node-lib": ["src/index.ts"],
            "@src/*": ["src/*"],
            "@tests/*": ["tests/*"]
        }
    },
    "include": ["src", "tests"],
    "exclude": ["node_modules", "dist"]
}
