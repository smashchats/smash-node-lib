{
    "name": "smash-node-lib",
    "version": "0.0.0-alpha",
    "description": "",
    "main": "dist/src/index.js",
    "types": "dist/src/index.d.ts",
    "files": [
        "dist/src/**/*"
    ],
    "type": "module",
    "scripts": {
        "start": "nodemon --ignore './scripts/*'",
        "test": "jest --config jest.config.cjs --coverage",
        "build": "tsc && tsc-alias",
        "prettier-format": "prettier --config .prettierrc 'src/**/*.ts' --write",
        "script/json": "ts-node ./scripts/create-identity.ts",
        "script/id": "ts-node ./scripts/generate-identity-hsm.ts",
        "script/sign": "ts-node ./scripts/test-sign.ts",
        "script/client": "ts-node ./scripts/client.ts",
        "create-id": "npm run --silent script/json 0 1 0 > ./out/identity-exported.json",
        "generate-id": "npm run --silent script/id 0 1 0 > ./out/identity-hsm.json",
        "docker-build": "docker build . -t smash-nbh-bot",
        "docker-test": "docker build . -t softhsmv2 && docker build . -f Dockerfile.test",
        "prepare": "husky",
        "check-circular": "npm run build && madge --circular dist/"
    },
    "keywords": [],
    "author": "",
    "license": "MIT",
    "dependencies": {
        "@peculiar/webcrypto": "^1.4.6",
        "2key-ratchet": "^1.0.18",
        "simple-peer": "^9.11.1",
        "socket.io-client": "^4.8.0"
    },
    "devDependencies": {
        "@eslint/js": "^9.11.1",
        "@trivago/prettier-plugin-sort-imports": "^4.3.0",
        "@types/jest": "^29.5.13",
        "@types/simple-peer": "^9.11.8",
        "dotenv": "^16.4.5",
        "eslint": "^9.11.1",
        "husky": "^9.1.6",
        "jest": "^29.7.0",
        "madge": "^8.0.0",
        "nodemon": "^3.1.7",
        "prettier": "^3.3.3",
        "socket.io": "^4.8.0",
        "ts-jest": "^29.2.5",
        "ts-node": "^10.9.2",
        "tsc-alias": "^1.8.10",
        "typescript": "^5.6.2",
        "typescript-eslint": "^8.6.0"
    }
}
